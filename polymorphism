# Base class
class Animal:
    def make_sound(self):
        print("This animal makes a sound.")

# Derived class Dog
class Dog(Animal):
    def make_sound(self):
        print("Bark!")

# Derived class Cat
class Cat(Animal):
    def make_sound(self):
        print("Meow!")

# Derived class Bird
class Bird(Animal):
    def make_sound(self):
        print("Chirp!")

# Demonstrating Polymorphism
animals = [Dog(), Cat(), Bird()]

for animal in animals:
    animal.make_sound()
